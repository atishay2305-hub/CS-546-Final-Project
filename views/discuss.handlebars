<div>
    <div class="dicussion-panel row justify-content-center mt-5">
        <div class="col-12 col-md-6">
            {{!-- <div class="my-3 text-right">
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#createDiscussionModal"> + New Discussion</button>
            </div> --}}
<div class="my-3 text-right text-right"> <!-- Added 'text-center' class -->
    <button type="button" class="btn btn-primary my-blue-btn" data-toggle="modal" data-target="#createDiscussionModal">
        + New Discussion
    </button>
</div>

            <div id="filters">
<form action="/discuss" method="GET">
    <div class="row">
        <div class="col form-group">
            <select class="form-control category m-0" name="category">
                {{!-- <option value="All" selected="true">All</option> --}}
                <option value="All">All</option>
            </select>
        </div>
        <div class="col form-group">
            <label for="search">Search Discussion</label>
            <input class="form-control" type="text" id="search" name="search" placeholder="Search Discussions Here">
        </div>
        <div class="col form-group">
            <button class="btn btn-dark" type="submit">Search</button>
        </div>
    </div>
</form>

            </div>
            {{#each newDiscussion}}
                <div class="discussion p-4 mb-3">
                    <span class="text-primary" style="color: maroon !important;">Category: {{category}}</span>
                    <span> | </span>
                    <span class="text-secondary">Username: {{userName}}</span>
                    <p style="font-size: 30px;">{{description}}</p>
                    <div class="my-1 text-right">
<button class="btn btn-info btn-sm" onclick="replyForm('{{this._id}}', this)" style="background-color: darkgreen; border-color: darkgreen; color: white;">Show replies</button>
                        <div class="replies text-left" style="display: none;">
                            {{#each result}}
                                <div class="reply p-2 my-2 bg-light">
                                    <p>{{this.userName}} - {{this.message}}</p>
                                </div>
                            {{/each}}
                            <form class="reply-form">
                                <textarea id="reply-textarea"></textarea>
                                <button class="btn btn-success btn-sm" type="button" onclick="postReply(event, '{{_id}}', this)">Post Reply</button>
                                <div class="error-message"></div>
                            </form>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>

<div class="modal fade" id="createDiscussionModal" tabindex="-1" role="dialog" aria-labelledby="createDiscussionModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title" id="createDiscussionModalLabel">New Discussion</h1>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id ="form" class ="form" action="/discuss" method="post">
                    <div class="form-group">
                        <select class="form-control category m-0" name="category">
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="description" class="col-form-label">Description:</label>
                        <textarea class="form-control" id="description" name="description" rows="5"></textarea>
                    </div>

                    <div>
                        <span id="cmt-err" class="text-danger" style="display: none;"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary" id="submitBtn">Send</button>
                    </div>


                </form>
            </div>
        </div>
    </div>
</div>
<link rel="stylesheet" href="/public/css/discussion.css">
<script src="../public/js/discuss/discuss.js"></script>
